{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/graphql.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/web/**",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "backend/api/graphql.ts": {
      "includeFiles": "backend/src/schema/**/*.graphql"
    }
  },
  "rewrites": [
    {
      "source": "/api/graphql",
      "destination": "/backend/api/graphql.ts"
    },
    {
      "source": "/graphql",
      "destination": "/backend/api/graphql.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/web/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/graphql",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}